@model IEnumerable<Vidley.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (Model.Any())
{
    <table>
        <thead>
        <tr>Movie</tr>
        </thead>

        @foreach (var movie in Model) {
            <tr>
                <td>@movie.Name</td>
            </tr>
        }
    </table>
}
else
{
    <text>Sorry, there are currently no movies in the database.</text>
}



